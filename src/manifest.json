{
  "manifest_version": 2,
  "name": "Resolve",
  "version": "0.12",
  "description": "Get a BSV address for $handle, 1handle or Paymail",
  "browser_action": {
    "default_title": "Resolve address converter",
    "default_popup": "./popup/popup.html",
    "default_icon": {
      "48": "assets/bitcoin.png"
    }
  },
  "short_name": "resolve",  
  "permissions": [
    "storage"
  ]
}