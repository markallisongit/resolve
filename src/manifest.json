{
    "manifest_version": 2,
    "name": "Resolve",
    "version": "0.1",
  
    "description": "Get a BSV address for $handle, 1handle or Paymail",
    "icons": {
      "48": "icons/paymail48.png",
      "64": "icons/paymail64.png",
      "128": "icons/paymail128.png"
    },
    "browser_action": {
      "default_title": "Resolve address converter",
      "default_popup": "./popup/popup.html",
      "default_icon": {
        "48": "icons/paymail48.png",
        "64": "icons/paymail64.png",
        "128": "icons/paymail128.png"
      }    
    },
    "short_name": "Resolve",
    "content_security_policy": "script-src 'self' https://api.polynym.io/getAddress ; object-src 'self'",  
  
    "permissions": [
      "storage",
      "clipboardWrite"
    ]
  }