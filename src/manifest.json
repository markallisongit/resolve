{
  "manifest_version": 2,
  "name": "Resolve",
  "version": "0.11",
  "description": "Get a BSV address for $handle, 1handle or Paymail",
  "browser_action": {
    "default_title": "Resolve address converter",
    "default_popup": "./popup/popup.html",
    "default_icon": {
      "48": "assets/bitcoin.png"
    }
  },
  "short_name": "Resolve",  
  "content_security_policy": "script-src 'self' https://maxcdn.bootstrapcdn.com https://api.qrserver.com https://api.polynym.io; object-src 'self'", 
  "permissions": [
    "storage"
  ]
}